{
    "name": "Sight Reading Helper",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [{
      "resources": ["injected-script.js", "opensheetmusicdisplay.min.js"],
      "matches": ["https://*.sightreadingfactory.com/*"]
    }],
    "content_scripts": [
      {
        "matches": ["https://*.sightreadingfactory.com/grade/session/*/a/feedback"],
        "js": ["content-script.js", "opensheetmusicdisplay.min.js"],
        "run_at": "document_end"
      }
    ],
    "action": {
    },
    "permissions": ["storage", "scripting", "tabs"], 
    "host_permissions":["https://storage.googleapis.com/*", "https://us-central1-notes-analyzer.cloudfunctions.net/analyze_file*", "https://downloads2.makemusic.com/musicxml/*", "https://kit.fontawesome.com/*"],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
  

  